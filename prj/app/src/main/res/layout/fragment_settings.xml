<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equalizer"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:rowCount="2">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#2C2C2C"
                android:layout_column="0"
                android:layout_row="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <SeekBar
                        android:layout_width="240dp"
                        android:layout_height="20dp"
                        android:max="100"
                        android:progress="44"
                        android:rotation="270"
                        android:progressTint="#00E676"
                        android:thumb="@color/red"
                        android:thumbTint="#00E676"
                        android:splitTrack="false"
                        android:backgroundTint="#444444" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        app:cardCornerRadius="50dp"
                        android:backgroundTint="@color/red"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60HZ"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#2C2C2C"
                android:layout_column="1"
                android:layout_row="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <SeekBar
                        android:layout_width="240dp"
                        android:layout_height="20dp"
                        android:max="100"
                        android:progress="64"
                        android:rotation="270"
                        android:progressTint="#00E676"
                        android:thumb="@color/red"
                        android:thumbTint="#00E676"
                        android:splitTrack="false"
                        android:backgroundTint="#444444" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        app:cardCornerRadius="50dp"
                        android:layout_marginTop="-40dp"
                        android:backgroundTint="@color/red"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1K-HZ"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#2C2C2C"
                android:layout_column="2"
                android:layout_row="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">

                    <SeekBar
                        android:layout_width="240dp"
                        android:layout_height="20dp"
                        android:max="100"
                        android:progress="24"
                        android:rotation="270"
                        android:progressTint="#00E676"
                        android:thumb="@color/red"
                        android:thumbTint="#00E676"
                        android:splitTrack="false"
                        android:backgroundTint="#444444" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginTop="40dp"
                        app:cardCornerRadius="50dp"
                        android:backgroundTint="@color/red"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16K-HZ"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

        </GridLayout>
    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Other Information"
            android:textColor="@color/oth_gray"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:id="@+id/themeSwitch"
                android:text="Dark Mode"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country: "
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Georgia 🇬🇪"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="10dp">
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:id="@+id/LanguageSwitch"
                android:text="ქართულად"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/oth_gray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Clear Cache Files"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/gold">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Get Premium"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Sign Out"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

</FrameLayout>